.search {
  background: #fafafa;
  height: 100vh;
}
.search .status_bar {
    height: var(--status-bar-height);
    width: 100%;
    background-color: #F8F8F8;
}
.search .top_view {
    height: var(--status-bar-height);
    width: 100%;
    position: fixed;
    background-color: #F8F8F8;
    top: 0;
    z-index: 999;
}
.search .tips .tips_tit {
    line-height: 110rpx;
    text-align: center;
    font-size: 30rpx;
    color: #aeaeae;
}
